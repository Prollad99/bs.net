{{ "<!-- Google XML Sitemap generated by Hugo -->" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{ range .Site.RegularPages }}
    <url>
      <loc>{{ .Permalink }}</loc>
      <lastmod>{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}</lastmod>
      <changefreq>{{ .Sitemap.ChangeFreq | default .Site.Sitemap.ChangeFreq }}</changefreq>
      <priority>{{ .Sitemap.Priority | default .Site.Sitemap.Priority }}</priority>
    </url>
  {{ end }}
</urlset>