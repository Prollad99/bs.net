{{ "<!-- Google XML Sitemap generated by Hugo, Custom Template -->" | safeHTML }}
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {{ range .Site.RegularPages }}
    {{ if .IsHome }}
      <!-- Home Page -->
    {{ else }}
      <!-- Other Regular Pages -->
    {{ end }}
    <url>
      <loc>{{ .Permalink }}</loc>
      <lastmod>{{ .Date.Format "2006-01-02T15:04:05Z07:00" }}</lastmod>
      <changefreq>{{ .Params.sitemap_changefreq | default "daily" }}</changefreq>
      <priority>{{ .Params.sitemap_priority | default 0.5 }}</priority>
    </url>
  {{ end }}
</urlset>
